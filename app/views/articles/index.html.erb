<div class="container-md">
<h1 class="text-center mt-5 mb-4">All Artciles</h1>
	<% @articles.each do |article| %>
	<div class="card text-center">
	  <div class="card-header">
	    <em>By Jamie Graham</em>
	  </div>
	  <div class="card-body">
	    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-link" %></h5>
	    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
			<%= link_to 'View', article_path(article), class: "btn btn-sm btn-outline-light" %> <%= link_to 'Edit', edit_article_path(article), class: "btn btn-sm btn-outline-light" %> <%= link_to 'Delete', article_path(article), class: "btn btn-sm btn-outline-light", method: :delete, data: { confirm: "Are you sure?" }%>
	  </div>
	  <div class="card-footer text-muted">
	    <small>Create <%= time_ago_in_words(article.created_at) %> ago, edited <%= time_ago_in_words(article.updated_at) %> ago</small>
	  </div>
	</div>
	<% end %>
</div>

